@model List<TODOApp.Models.ToDo>

<h1>@ViewBag.title</h1>
@{
    if (Model.Count == 0)
    {
        <p>No Todos typed !</p>
    }
}

<h1>My Todos</h1>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
    </tr>

        <tr>
            @{
                foreach (var t in Model)
                {
                    <td>
                        @t.Name
                    </td>
                    <td>
                        @t.Description
                    </td>
                }
            }
        </tr>
</table>

<p><a href="/ToDo/Add">Add Todo</a></p>